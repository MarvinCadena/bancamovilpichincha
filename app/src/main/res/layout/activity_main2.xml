<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animeview"
        android:layout_width="417dp"
        android:layout_height="341dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anima" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="329dp"
        android:layout_height="27dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Cuida tus contraseñas, no la compartas con nadie."
        android:textColor="#152659"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintVertical_bias="0.578" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="86dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintVertical_bias="0.192">

        <ImageButton
            android:id="@+id/imbu1"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            app:srcCompat="@drawable/usuario" />

        <ImageButton
            android:id="@+id/imbu2"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            app:srcCompat="@drawable/facehuella" />

        <ImageButton
            android:id="@+id/imbu3"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            app:srcCompat="@drawable/baseline_fiber_pin_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Usuario y Contraseña"
            android:textColor="#44517A"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Huella digital/Face ID"
            android:textColor="#44517A"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Pin de 6 digitos"
            android:textColor="#44517A"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="342dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/imbu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            app:srcCompat="@drawable/ubicacion" />

        <ImageButton
            android:id="@+id/imbu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            app:srcCompat="@drawable/forein" />

        <ImageButton
            android:id="@+id/imbu6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            app:srcCompat="@drawable/telefono" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="19dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/txt5"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Ubícanos"
            android:textColor="#00BCD4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Clave digital"
            android:textColor="#00BCD4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Llámanos"
            android:textColor="#00BCD4"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt8"
        android:layout_width="190dp"
        android:layout_height="22dp"
        android:layout_marginBottom="5dp"
        android:text="¿Ingresar con otro usuario?"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>